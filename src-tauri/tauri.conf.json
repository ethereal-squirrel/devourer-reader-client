{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "devourer",
  "version": "1.0.0",
  "identifier": "client.devourer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "deep-link": {
      "mobile": [{ "host": "devourer.app", "pathPrefix": ["/open"] }],
      "desktop": {
        "schemes": ["manga-devourer", "devourer"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Devourer",
        "width": 1280,
        "height": 720,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost *",
        "connect-src": "ipc: http://ipc.localhost asset: http://asset.localhost *",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' *"
      }
    }
  },
  "bundle": {
    "active": true,
    "iOS": {
      "developmentTeam": "RU4YWG83QV"
    },
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
